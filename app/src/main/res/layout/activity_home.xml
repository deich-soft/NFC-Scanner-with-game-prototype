<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.leebet_pc.prototype.HomeActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/idle_screen"
        android:visibility="visible">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:orientation="vertical"
            android:background="#237"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/beep1"
                android:adjustViewBounds="true"
                android:layout_gravity="center"
                android:layout_weight="0.90" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="TAP TO CHECK YOUR"
                android:textColor="#fff"
                android:textSize="40sp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="#fff">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="AVAILABLE BALANCE"
                android:textColor="#237"
                android:textSize="40sp"
                android:textStyle="normal" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/tapped_screen"
        android:background="#237"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:orientation="vertical"
            android:background="#237"
            >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.90"
                android:adjustViewBounds="true"
                android:src="@drawable/beep1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="Remaining Balance "
                android:textColor="#fff"
                android:textSize="50sp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="#fff">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="P 250.00"
                android:textColor="#237"
                android:textSize="49sp"
                android:textStyle="normal" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/init_game_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#237"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:background="#237"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageGameView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:alpha="0.3"
                android:adjustViewBounds="true"
                android:src="@drawable/beep1" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView3"
                android:layout_alignParentStart="true"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="TAP TO WIN"
                android:textColor="#fff"
                android:textSize="85sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="60dp"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="20 PESOS LOAD"
                android:textColor="#fff"
                android:textSize="60sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/claim_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#237"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:background="#237"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageClaimView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:alpha="0.3"
                android:adjustViewBounds="true"
                android:src="@drawable/beep1" />



            <ImageView
                android:id="@+id/imageRedHorse"
                android:layout_width="300dp"
                android:layout_height="360dp"
                android:alpha="0.5"
                android:adjustViewBounds="true"
                android:src="@drawable/asd"
                android:layout_alignParentTop="true"
                android:layout_alignEnd="@+id/textView5" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="RED HORSE 500mL"
                android:textColor="#fff"
                android:textSize="50sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView5"
                android:layout_centerHorizontal="true"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="TAP FOR A CHANCE TO WIN"
                android:textColor="#fff"
                android:textSize="34sp"
                android:textStyle="bold" />


        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:id="@+id/cards"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/card1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"

            android:layout_margin="10dp"

            app:srcCompat="@drawable/beepcard"
            />
        <ImageButton
            android:id="@+id/card11"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:visibility="gone"
            app:srcCompat="@drawable/flippedbeepcard3" />

        <ImageButton
            android:id="@+id/card2"
            android:layout_width="0px"
            android:layout_weight="1"

            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:srcCompat="@drawable/beepcard" />
        <ImageButton
            android:id="@+id/card22"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:visibility="gone"
            app:srcCompat="@drawable/flippedbeepcard1" />

        <ImageButton
            android:id="@+id/card3"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"

            android:visibility="visible"
            app:srcCompat="@drawable/beepcard" />

        <ImageButton
            android:id="@+id/card33"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:visibility="gone"
            app:srcCompat="@drawable/flippedbeepcard2" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FF223377"
        android:orientation="vertical"
        android:weightSum="1"
        android:visibility="gone"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="6dp">
        <ImageView
            android:id="@+id/imgIdle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:alpha="0.3"
            android:adjustViewBounds="true"
            android:visibility="gone"
            android:src="@drawable/beeplogo" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change!"
            android:visibility="gone" />

        <TextView
            android:id="@+id/space1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.37" />

        <TextView
            android:id="@+id/grats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:text="Congratulations"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="40sp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/claim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:text="Tap your CARD to claim"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="40sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/won"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:text="You Won"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="40sp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/reward"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:text="your reward!"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="40sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/space2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.37"
            android:fontFamily="serif"
            android:visibility="gone" />

        <TextView
            android:id="@+id/top"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:text="+ 20.00"
            android:textAlignment="textEnd"
            android:textColor="?android:attr/colorBackground"
            android:textSize="40sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.18"
            android:fontFamily="serif"
            android:text="Balance: 250.00"
            android:textAlignment="center"
            android:textColor="?android:attr/colorBackground"
            android:textSize="40sp"
            android:textStyle="bold"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>
